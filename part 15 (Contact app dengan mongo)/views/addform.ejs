<h1>Ini Adalah untuk menambahkan data</h1>

<!-- masukkan metode jika error terdeteksi -->
<!-- jika error tampilkan pesan bahwa error terdeteksi dengan
menggunakan for each pada error yang dikirimkan oleh app.js 
-->
<% if (typeof error != 'undefined') { %>
<div class="alert alert-danger" role="alert">
  <ul>
    <% error.forEach(element => { %>
    <li><%= element.msg %></li>
    <% }) %>
  </ul>
</div>
<% } %>

