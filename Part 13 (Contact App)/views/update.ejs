<h1>Ini adalah halaman untuk mengupdate data</h1>

<form method="POST" action="/data/update">
  <!-- PROBLEM -->
  <!-- old name akan mengikuti sesuai dengan nama yang barusan terkirim -->
  <!-- menggunakan operator ternary -->
  <!-- jadi old nama tidak akan berubah rubah dan tetap pada saa dia gagal menerima input nama -->
  <input
    type="hidden"
    name="oldName"
    value="<%= (contactsName) ? contactsName.oldName : contactsName.nama %>"
  />
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Nama</label>
    <div class="col-sm-10">
      <input
        type="text"
        class="form-control"
        id="nama"
        name="nama"
        value="<%= contactsName.nama %>"
      />
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label"
      >Nomor Handphone</label
    >
    <div class="col-sm-10">
      <input
        type="text"
        class="form-control"
        id="nohp"
        name="nohp"
        value="<%= contactsName.nohp %>"
      />
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        value="<%= contactsName.email %>"
      />
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Sign in</button>
</form>
